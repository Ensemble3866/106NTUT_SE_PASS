                    </a>

                    <div class="status">
                        <label class="haventStart">尚未開始</label>
                    </div>

                    <div class="manageAssignment">
                        <a href="/pass/editAssignment">
                            <div class="editAssignment">
                                <img src="/image/edit.png">
                                <label>編輯作業</label>
                            </div>
                        </a>
                        <br>
                        <br>
                        <a href=#>
                            <div class="deleteAssignment">
                                <img src="/image/delete.png">
                                <label>刪除作業</label>
                            </div>
                        </a>
                    </div>
                </div>

                <hr>

                <div class="assignment">
                    <img src="/image/assignment.png" alt="assignment" id="assignmentImg">
                    <a href="/pass/assignment">
                        <div class="assignmentInfo">
                            <label class="assignmentName">Homework #2</label>
                            <br>
                            <label class="assignmentHangIn">已交：14人</label>
                            <label class="assignmentNotHangIn">未交：48人</label>
                            <br>
                            <label class="assignmentDate">2017/12/30 - 2017/01/12</label>
                        </div>
                    </a>

                    <div class="status">
                        <label class="proceeding">進行中</label>
                    </div>

                    <div class="manageAssignment">
                        <a href="/pass/editAssignment">
                            <div class="editAssignment">
                                <img src="/image/edit.png">
                                <label>編輯作業</label>
                            </div>
                        </a>
                        <br>
                        <br>
                        <a href=#>
                            <div class="deleteAssignment">
                                <img src="/image/delete.png">
                                <label>刪除作業</label>
                            </div>
                        </a>
                    </div>
                </div>

                <hr>

                <div class="assignment">
                    <img src="/image/assignment.png" alt="assignment" id="assignmentImg">
                    <a href="/pass/assignment">
                        <div class="assignmentInfo">
                            <label class="assignmentName">Homework #1</label>
                            <br>
                            <label class="assignmentHangIn">已交：41人</label>
                            <label class="assignmentNotHangIn">未交：7人</label>
                            <br>
                            <label class="assignmentDate">2017/09/20 - 2017/10/27</label>
                        </div>
                    </a>

                    <div class="status">
                        <label class="hasDone">已結束</label>
                    </div>

                    <div class="manageAssignment">
                        <a href="/pass/editAssignment">
                            <div class="editAssignment">
                                <img src="/image/edit.png">
                                <label>編輯作業</label>
                            </div>
                        </a>
                        <br>
                        <br>
                        <a href=#>
                            <div class="deleteAssignment">
                                <img src="/image/delete.png">
                                <label>刪除作業</label>
                            </div>
                        </a>
                    </div>
                </div>
            </div>




        </div>
    </div>

    <%- include('footer') -%>

